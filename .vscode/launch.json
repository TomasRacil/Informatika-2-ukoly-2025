{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C/C++: Debug active file in Docker",
            "type": "cppdbg",
            "request": "launch",
            "program": "/workspace/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "/workspace",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: Build active file in Docker"
        }
    ]
}
